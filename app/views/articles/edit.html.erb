<h1>Edit Article</h1>

<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <p><%= pluralize(@article.errors.count, "error")%> prohibited the article to be edited</p>
    <ul>
      <% @article.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>
  <br>
  <%= f.label :title, 'Title:' %><br>
  <%= f.text_field :title, placeholder: "Type a title for this Article here !"%>
  <br><br>
  <%= f.label :body, 'Content:'%><br>
  <%= f.text_area :body, placeholder: "Type here the content of the article!"%>
  <br><br>
  <%= f.submit 'Save changes article' %>
<% end %>