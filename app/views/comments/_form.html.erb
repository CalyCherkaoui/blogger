<h3>Leave a comment!</h3>

<%= form_for [@article, @comment ] do |f| %>
  <%= f.label :author_name, 'Enter your name here:' %><br>
  <%= f.text_field :author_name %>
  <br><br>
  <%= f.label :body, 'Type your comment here:' %><br>
  <%= f.text_area :body %>
  <br><br>
  <%= f.submit 'Post this comment'%>
<%end%>